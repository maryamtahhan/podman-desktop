! Fluxbox configuration file

! Menu and key bindings files
session.menuFile: ~/.fluxbox/menu
session.keyFile: ~/.fluxbox/keys

! Set the default theme
session.styleFile: /usr/share/fluxbox/styles/bora_blue

! Configuration version
session.configVersion: 13

! Toolbar settings
session.screen0.toolbar.widthPercent: 100
session.screen0.toolbar.tools: prevworkspace, workspacename, nextworkspace, clock, prevwindow, nextwindow, iconbar, systemtray
session.screen0.strftimeFormat: %d %b, %a %02k:%M:%S

! Disable the toolbar (set to true if needed)
session.screen0.toolbar.visible: false

! Additional settings (optional)

! Enable edge snapping for windows
session.screen0.edgeSnapThreshold: 10

! Focus model (options: "ClickToFocus", "SloppyFocus", "SemiSloppyFocus")
session.screen0.focusModel: ClickToFocus

! Disable workspace cycling wrap (true to wrap)
session.screen0.workspacewarping: false

! Set the number of workspaces (default: 1)
session.screen0.workspaces: 1

! Enable full maximize for windows (vertically and horizontally)
session.screen0.fullMaximization: true
